<div class="blood-bank">
    <div class="bank_form-container">
        <label for="donor">Are you a Donor or Receiver?</label><br>
        <input type="radio" name="role" id="donor" value="donor"> <label for="donor">Donor</label>
        <input type="radio" name="role" id="receiver" value="receiver"> <label for="receiver">Receiver</label><br>
        <button onclick="showForm()">Proceed</button>
    </div>
    <div id="donorForm" style="display: none;">
        <h2>List of Blood Banks</h2>
        <ul class="blood_bank-list">
            <li>
                <h2>Blood Bank 1</h2>
                <p>Address: Address of Blood Bank 1</p>
                <p>Contact: Contact Number of Blood Bank 1</p>
            </li>
            <li>
                <h2>Blood Bank 2</h2>
                <p>Address: Address of Blood Bank 2</p>
                <p>Contact: Contact Number of Blood Bank 2</p>
            </li>
        </ul>
    </div>

    
            <!-- Receiver registration form -->
            <div id="receiverForm" style="display: none;">
                <div class="border-bottom mb-4 pb-2">
                    <h2 class="mb-4 Receiver_Registration" style="text-align: center;">Receiver Registration</h2>
                </div>
                <form id="receiverRegistrationForm">
                    <div class="row mb-3">
                        <div class="col-md-12">
                            <label for="bloodGroup" class="form-label">Blood Group:</label>
                            <select id="bloodGroup" name="bloodGroup" class="form-select" aria-label="Blood Group" required>
                                <option selected disabled>Select Blood Group</option>
                                <option value="A+">A+</option>
                                <option value="A-">A-</option>
                                <option value="B+">B+</option>
                                <option value="B-">B-</option>
                                <option value="AB+">AB+</option>
                                <option value="AB-">AB-</option>
                                <option value="O+">O+</option>
                                <option value="O-">O-</option>
                            </select>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label for="name" class="form-label">Name:</label>
                            <input type="text" id="name" name="name" class="form-control" required>
                        </div>
                    
                    
                        <div class="col-md-6">
                            <label for="contactNumber" class="form-label">Contact Number:</label>
                            <input type="tel" id="contactNumber" name="contactNumber" class="form-control" pattern="[0-9]{10}" required>
                            <div class="form-text">Please enter a 10-digit contact number.</div>
                        </div>
                       
                    </div>
                  
                        <div class="col-md-8">
                            <label for="address" class="form-label">Address:</label>
                            <textarea id="address" name="address" class="form-control" rows="4" required></textarea>
                        </div>
                    
                            <div>
                                <button type="submit" class="btn btn-primary" style="align-items: center;">Register</button>
                            </div>
                   
                  
                </form>
            </div>
            